{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workflows_ahmedvmcase_name": {
            "defaultValue": "ahmedvmcase",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('workflows_ahmedvmcase_name')]",
            "location": "northeurope",
            "kind": "AutomationTask",
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "LogicAppUrl": {
                            "defaultValue": "http",
                            "type": "String"
                        },
                        "Query": {
                            "defaultValue": "test",
                            "type": "String"
                        }
                    },
                    "triggers": {
                        "manual": {
                            "type": "Request",
                            "kind": "Http",
                            "inputs": {
                                "method": "GET"
                            }
                        }
                    },
                    "actions": {
                        "HTTP": {
                            "runAfter": {
                                "Initialize_variable_GraphRequest": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Http",
                            "inputs": {
                                "body": "@json(variables('GraphRequest'))",
                                "method": "POST",
                                "uri": "https://management.azure.com/providers/Microsoft.ResourceGraph/resources?api-version=2021-03-01"
                            }
                        },
                        "Initialize_variable_GraphRequest": {
                            "runAfter": {
                                "Initialize_variable_nextLink": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "GraphRequest",
                                        "type": "string",
                                        "value": "{\n\n @{variables('QOption')}\n  \"query\": \"@{parameters('Query')}\"\n}"
                                    }
                                ]
                            }
                        },
                        "Initialize_variable_Option": {
                            "runAfter": {},
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "QOption",
                                        "type": "string",
                                        "value": " @{if(empty(variables('nextLink')),'',concat(' \"options\": {\n \"$skipToken\" :\"',variables('nextLink'),'\"   \n  },'))}"
                                    }
                                ]
                            }
                        },
                        "Initialize_variable_Responses": {
                            "runAfter": {
                                "HTTP": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "Res",
                                        "type": "string",
                                        "value": "{\n  \"value\": @{body('HTTP')['data']}\n@{if(empty( body('HTTP')?['$skipToken']),'',concat(',','\"nextLink\":','\"',parameters('LogicAppURL'),'&nextLink=',body('HTTP')?['$skipToken'],'\"'))}\n\n}"
                                    }
                                ]
                            }
                        },
                        "Initialize_variable_nextLink": {
                            "runAfter": {
                                "Initialize_variable_Option": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "nextLink",
                                        "type": "string",
                                        "value": "@{triggerOutputs()?['queries']?['nextLink']}"
                                    }
                                ]
                            },
                            "description": "check if there is a nextLink in the request "
                        },
                        "Response": {
                            "runAfter": {
                                "Initialize_variable_Responses": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Response",
                            "kind": "Http",
                            "inputs": {
                                "body": "@json(variables('Res'))",
                                "statusCode": 200
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {}
            }
        }
    ]
}
